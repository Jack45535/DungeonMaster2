@foreach (var game in Model)
{
<div id="GameContainer">
    <div class="row">
        <div class="col-md-2">
            <label id="Name">Name: </label>
        </div>
        <div class="col-md-2">
            <label class="input-group" id="NameInput">@Html.DisplayFor(modelItem => game.Name)</label>
        </div>
        <div class="col-md-5" style="text-align:right;">
            <label id="Game Master">Game Master: </label>
        </div>
        <div class="col-md-2">
            <label class="input-group" id="GMInput">@Html.DisplayFor(modelItem => game.GameMaster)</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <label id="DateCreated">Date Created: </label>
        </div>
        <div class="col-md-2">
            <label class="input-group" id="DateCreatedInput"> @Html.DisplayFor(model => game.DateCreated)</label>
        </div>
    </div>

    <div class="row" id="TextContainer">
        <div class="col-md-2">
            <label id="LastPlayed">Last Played:</label>
        </div>
        <div class="col-md-2">
            <label class="input-group" id="LastPlayedInput">@Html.DisplayFor(model => game.DateLastOpened)</label>
        </div>
    </div>



    <div id="PartyWrapper">
        <div class="row">
            <div>
                <label class="col-md-4" id="Partylabel">Party</label>
            </div>
        </div>
        <div id="Partytable">
            <div class="row" >
                <div class="col-md-2" id="PartyHeaderName">
                    <label>Name</label>
                </div>
                <div class="col-md-2" id="PartyHeaderOwner">
                    <label>Owner</label>
                </div>
            </div>

            @foreach (var character in game.Characters)
            {
                <div class="row">
                    <div class="col-md-2" id="Partycellsname">
                        <label>@Html.DisplayFor(model => character.Name)</label>
                    </div>
                    <div class="col-md-2" id="Partycellsowner">
                        <label>@Html.DisplayFor(model => character.Owner)</label>
                    </div>
                </div>
            }
        </div>
    </div>
    





    <div class="row">
        <div class="col-md-11">
            <div style="padding-left:10px;">
                @*<button class="OpenButton" id="OpenButton">Open</button>*@
                @*@Html.ActionLink("Open", "Details", new { id = item.Id }, new { @class = "OpenButton" }) | @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "EditButton" })*@
                @Html.ActionLink("Open", "Test", "Characters", new { id = game.Id }, new { @class = "OpenButton" }) | @Html.ActionLink("Edit", "Edit", new { id = game.Id }, new { @class = "EditButton" })
            </div>
        </div>
        <div class="col-md-1">
            @Html.ActionLink("Delete", "Delete", new { id = game.Id }, new { @class = "DeleteButton" })
        </div>
    </div>
</div>
}

<div class="NewButton">
    @Html.ActionLink("Create New Game", "Create")
</div>





